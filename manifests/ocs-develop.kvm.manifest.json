{
   "packages" : {
      "mirror" : "http://pkg.cloudscaling.com/ocs",
      "install" : [ "ocs-minimal", "ocs-standard", "chef", "curl",
                    "ocs-basefiles", "ruby2.0-dev", "build-essential" ],
      "components" : [ "main", "universe", "non-free" ],
      "sources" : {
         "ocs-proposed" : [
            "deb http://pkg.cloudscaling.com/ocs develop-proposed main universe"
            ]
      }
   },
   "system" : {
      "release" : "develop",
      "architecture" : "amd64",
      "charmap" : "UTF-8",
      "locale" : "en_US",
      "timezone" : "UTC",
      "bootloader" : "grub"
   },
   "volume" : {
      "partitions" : {
         "swap" : {
            "size" : "128MiB"
         },
         "root" : {
            "filesystem" : "ext4",
            "size" : "1500MiB"
         },
         "type" : "msdos"
      },
      "backing" : "raw"
   },
   "image" : {
      "name" : "ocs-{system.release}-{system.architecture}-{%y}{%m}{%d}",
      "description" : "OCS {system.release} {system.architecture}"
   },
   "provider" : "kvm",
   "bootstrapper" : {
      "mirror" : "http://pkg.cloudscaling.com/ocs",
      "workspace" : "/scratch/imagebuild"
   },
   "plugins" : {
      "ocs" : {},
      "root_password" : {
         "password" : "test"
      },
      "admin_user" : {
         "username" : "cloudscaling"
      },
      "apt_proxy" : {
         "address" : "sfonas.sfo.cloudscaling.com",
         "port" : 3142,
         "persistent" : false
      },
      "image_commands" : {
         "commands" : [
            ["touch", "{root}/etc/init.d/.legacy-bootordering"],
            ["rm", "-f", "{root}/etc/dpkg/dpkg.cfg.d/multiarch"],
            ["cp", "/etc/resolv.conf", "{root}/etc/resolv.conf"],
            ["chroot", "{root}", "gem", "install", "mudbug", "--version",
             "~> 0.8"],
            ["chroot", "{root}", "gem", "install", "netaddr", "--version",
             "~> 1.5"],
            ["rm", "-f", "{root}/etc/resolv.conf"]
         ]
      },
      "minimize_size" : {
         "zerofree" : true
      },
      "ntp" : {
         "servers" : ["pool.ntp.org"]
      },
      "prebootstrapped" : {
      }
   }
}
